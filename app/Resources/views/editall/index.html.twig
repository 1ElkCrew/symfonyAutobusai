{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-push-3 col-md-6" style="font-size: 16pt;">
            <table class="table table-striped table-condensed table-bordered table-hover col-md-10 ">
                <h1>Routes</h1> <a href="{{ path("add_route") }}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Add New</a>
                <br><br>
                {% for route in routes %}
                    <tr>
                        <td class="col-md-10">{{ route.route }}</td>
                        <td class="col-md-1"><a class="btn btn-default btn-sm" href="{{ path("edit_route", {route: route.id}) }}">Edit</a>
                        <td class="col-md-1"><a class="btn btn-danger btn-sm" href="{{ path("delete_route", {route: route.id}) }}">Delete</a></td>
                    </tr>
                {% endfor %}
            </table>
            <table class="table table-striped table-condensed table-bordered table-hover col-md-10 ">
                <h1>Stops</h1> <a href="{{ path("add_stop") }}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Add New</a>
                <br><br>
                {% for stop in stops %}
                    <tr>
                        <td class="col-md-10">{{ stop.name }}</td>
                        <td class="col-md-1"><a class="btn btn-default btn-sm" href="{{ path("edit_stop", {stop: stop.id}) }}">Edit</a></td>
                        <td class="col-md-1"><a class="btn btn-danger btn-sm" href="{{ path("delete_stop", {stop: stop.id}) }}">Delete</a></td>
                    </tr>
                {% endfor %}
            </table>
            <table class="table table-striped table-condensed table-bordered table-hover col-md-10 ">
                <h1>Prices</h1> <a href="{{ path("add_price") }}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Add New</a>
                <br><br>
                {% for price in prices %}
                    <tr>
                        <td class="col-md-10">{{ price.stopPrice }}</td>
                        <td class="col-md-1"><a class="btn btn-default btn-sm" href="{{ path("edit_price", {price: price.id}) }}">Edit</a></td>
                        <td class="col-md-1"><a class="btn btn-danger btn-sm" href="{{ path("delete_price", {price: price.id}) }}">Delete</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
