{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-push-3 col-md-6" style="font-size: 16pt;">
            <table class="table table-striped table-condensed table-bordered table-hover col-md-10 ">
                <h1>Routes</h1>
                {% for route in routes %}
                    <tr>
                        <td class="col-md-2">{{ route.route }}</td>
                        <td class="col-md-1"><a class="btn btn-danger btn-sm col-md-6" href="{{ path("delete_route", {route: route.id}) }}">Delete</a></td>
                    </tr>
                {% endfor %}
            </table>
            <table class="table table-striped table-condensed table-bordered table-hover col-md-10 ">
                <h1>Stops</h1>
                {% for stop in stops %}
                    <tr>
                        <td>{{ stop.name }}</td>
                        <td class="col-md-1"><a class="btn btn-danger btn-sm col-md-6" href="{{ path("delete_stop", {stop: stop.id}) }}">Delete</a></td>
                    </tr>
                {% endfor %}
            </table>
            <table class="table table-striped table-condensed table-bordered table-hover col-md-10 ">
                <h1>Prices</h1>
                {% for price in prices %}
                    <tr>
                        <td>{{ price.stopPrice }}</td>
                        <td class="col-md-1"><a class="btn btn-danger btn-sm col-md-6" href="{{ path("delete_price", {price: price.id}) }}">Delete</a></td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
